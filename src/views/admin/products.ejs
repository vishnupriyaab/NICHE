<%- include('include/_header') %>
    <section class="content-main">
        <div class="content-header">

            <div>
                <h2 class="content-title card-title">Products</h2>
            </div>
            <div>
                <a href="/addProduct" class="btn btn-primary btn-sm rounded">Add Product</a>
            </div>
            <div>
                <a href="/unlistedProduct" class="btn btn-primary btn-sm rounded">Unlisted Products</a>
            </div>
        </div>
        <div class="card mb-4">
            <header class="card-header">
                <div class="row align-items-center">
                    <div class="col col-check flex-grow-0">
                        <div class="form-check ms-2">
                        </div>
                    </div>
                    <div class="col-md-2 col-6">
                        <select class="form-select">
                            <option selected>Status</option>
                            <option>Active</option>
                            <option>Disabled</option>
                            <option>Show all</option>
                        </select>
                    </div>
                </div>
            </header>
            <!-- card-header end// -->
            <div>
                <div class="table-responsive">
                    <table class="table table-hover ">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Product Image</th>
                                <th>Product Name</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Stock</th>
                                <th>Category</th>
                                <th>Edit</th>
                                <th>Delete</th>

                            </tr>
                        </thead>


                        <tbody>
                            <% for( let i=0; i < product.length; i++ ) { %>
                                <% if (product[i].isHidden==false) { %>

                                    <tr>
                                        <td>
                                            <%= i+1 %>
                                        </td>
                                        <td>
                                            <img style="width: 150px; height: 150px;" src='<%= product[i].imgArr[0] %>'
                                                alt="image not found">
                                        </td>
                                        <td>
                                            <p>
                                                <%= product[i].name %>
                                            </p>
                                        </td>
                                        <td>
                                            <p>
                                                <%= product[i].description %>
                                            </p>
                                        </td>
                                        <td>
                                            <p>
                                                <%= product[i].price %>
                                            </p>
                                        </td>
                                        <td>
                                            <p>
                                                <%= product[i].stock %>
                                            </p>
                                        </td>
                                        <td>
                                            <p>
                                                <%= product[i].category.name %>
                                            </p>
                                        </td>
                                        <td>
                                            <div class="col-lg-2 col-sm-2 col-2 col-action text-end">
                                                <a href="/editProduct/<%= product[i]._id %>"
                                                    class="btn btn-success btn-sm"> Edit </a>
                                            </div>
                                        </td>
                                        <td>

                                            <button type="button" class="btn btn-danger btn-sm"
                                                onclick="deleteproduct('<%= product[i]._id %>')">Delete</button>

                                        </td>
                                    </tr>
                                    <% } %>
                </div>
                <% } %>

                
            </tbody>
        </table>
    </div>
</div>
<!-- card-body end// -->
</div>
</section>
<% if (totalProducts !==0) { %>
    <div class="row mb-4">
      <div class="col-12">
        <div class="text-center pagenationButton">
          <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
              <li class="page-item">
                <a
                  class="page-link"
                  href="/adminProducts?page=<%= (currentPage === 1 || !currentPage)?1:(currentPage - 1) %>"
                  aria-label="Previous"
                >
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
              <% for( let i=0; i < (Math.ceil(totalProducts/ 10)); i++ ) { %>
              <li class="page-item">
                <a class="page-link" href="/adminProducts?page=<%= (i + 1) %>">
                  <%= (i + 1) %>
                </a>
              </li>
              <% } %>
              <li class="page-item">
                <a
                  class="page-link"
                  href="/adminProducts?page=<%= (((Math.ceil(totalProducts / 10)) === currentPage) || (Math.ceil(totalProducts / 10)) && !currentPage)?(currentPage?currentPage:1):(currentPage === 1 || !currentPage)?2:(currentPage + 1) %>"
                  aria-label="Next"
                >
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
    <% } %>
    <%  if ( totalProducts == 0 ) { %>
     

        <div>
            <h3 class="text-center text-danger">No Data Available..!!</h3>
        </div>


        <% } %>
    <!-- content-main end// -->

    <script>
        function deleteproduct(id) {
            axios.post('/deleteproduct', { id })
                .then((data) => {
                    Swal.fire({
                        title: "Good job!",
                        text: "Successfully Deleted",
                        icon: "success"
                    });
                    setTimeout(() => {
                        window.location.reload()
                    }, 1000);
                }).catch((err) => {
                    console.log(err);
                })
        }
    </script>

    <%- include('include/_footer') %>


        </main>
        <script src="/js/vendors/jquery-3.6.0.min.js"></script>
        <script src="/js/vendors/bootstrap.bundle.min.js"></script>
        <script src="/js/vendors/select2.min.js"></script>
        <script src="/js/vendors/perfect-scrollbar.js"></script>
        <script src="/js/vendors/jquery.fullscreen.min.js"></script>
        <!-- Main Script -->
        <script src="/js/main.js" type="text/javascript"></script>
        </body>

        </html>