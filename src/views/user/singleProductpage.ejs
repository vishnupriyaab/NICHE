<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
    <body>
        

        <div style="height: 100vh;" class="py-36">
            <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex flex-col md:flex-row -mx-4">
                <div class="md:flex-1 px-4">
                    <div class="h-[460px] rounded-lg bg-gray-300 dark:bg-gray-700 mb-4">
                        <img class="w-full h-full object-cover" src="<%= product.imgArr[0] %>" alt="Product Image">
                    </div>
                    <div class="flex -mx-2 mb-4">
                        <div class="w-1/2 px-2">
                            <button class="w-full bg-gray-900 dark:bg-gray-600 text-white py-2 px-4 rounded-full font-bold hover:bg-gray-800 dark:hover:bg-gray-700">Add to Cart</button>
                        </div>
                        <div class="w-1/2 px-2">
                            <button class="w-full bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-white py-2 px-4 rounded-full font-bold hover:bg-gray-300 dark:hover:bg-gray-600">Add to Wishlist</button>
                        </div>
                    </div>
                </div>
                <div class="md:flex-1 px-4">
                    <h2 class="text-2xl font-bold text-black-800 dark:text-black mb-2"><%= product.name %></h2>
                   
                    <div class="flex mb-4">
                        <div class="mr-4">
                            <span class="font-bold text-black-700 dark:text-black-300">Price:</span>
                            <span class="text-black-600 dark:text-black-300">$<%= product.price %></span>
                        </div>
                        <div>
                            <span class="font-bold text-black-700 dark:text-black-300">Availability:</span>
                            <span class="text-black-600 dark:text-black-300">In Stock</span>
                        </div>
                    </div>
                   
                    <div class="mb-4">
                        <span class="font-bold text-black-700 dark:text-black-300">Select Size:</span>
                        <div class="flex items-center mt-2">
                            <button class="bg-black-300 dark:bg-black-700 text-black-700 dark:text-black py-2 px-4 rounded-full font-bold mr-2 hover:bg-black-400 dark:hover:bg-black-600">4</button>
                            <button class="bg-black-300 dark:bg-black-700 text-black-700 dark:text-black py-2 px-4 rounded-full font-bold mr-2 hover:bg-black-400 dark:hover:bg-black-600">5</button>
                            <button class="bg-black-300 dark:bg-black-700 text-black-700 dark:text-black py-2 px-4 rounded-full font-bold mr-2 hover:bg-black-400 dark:hover:bg-black-600">6</button>
                            <button class="bg-black-300 dark:bg-black-700 text-black-700 dark:text-black py-2 px-4 rounded-full font-bold mr-2 hover:bg-black-400 dark:hover:bg-black-600">7</button>
                            <button class="bg-black-300 dark:bg-black-700 text-black-700 dark:text-black py-2 px-4 rounded-full font-bold mr-2 hover:bg-black-400 dark:hover:bg-black-600">8</button>
                        </div>
                    </div>
                    <div>
                        <span class="font-bold text-black-700 dark:text-black-300">Product Description:</span>
                        <p class="text-black-600 dark:text-black-300 text-sm mt-2">
                           <%= product.description %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.6.4/axios.min.js"
    integrity="sha512-ANd7ZJmixP2T0hxOP4bS6hkci01fxyrQSyRdaY7IsWq1WlKsD0WwWBDVDZbnMR7CJZVKCTkDx/q5D5n2C2C+vg=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        function changeProductImage(imageUrl) {
            const productImage = document.getElementById('productImage');
            const productDescription = document.getElementById('productDescription');
            const productPrice = document.getElementById('productPrice');
            
            productImage.style.transform = 'scale(0)';
            setTimeout(() => {
                productImage.src = imageUrl;
                productImage.style.transform = 'scale(1)';
            }, 300);
        }
        
        function addToCart(id) {
            axios.post('/api/addtocart', { id })
            .then(response => {
                console.log(response);
                // Check if the product was successfully added or already exists
                if (response.data.message === 'Product already in cart') {
                    console.log(response,"response");
                    console.log(response.data,"response data");
                    // Redirect the user to the cart page
                    window.location.href = '/cart';
                } else if(response.data.message === "Please Login"){
                    window.location.href = '/login';
                }else{
                    
                    console.log(response.data.message);
                }
            })
            .catch(error => {
                // Handle error, log to console for simplicity
                console.error('Error:', error);
            });
        }
        </script>

</body>

</html>